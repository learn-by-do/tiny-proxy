{
  "name": "switch-x",
  "version": "1.0",
  "description": "一个微型的 host、url 快速切换（代理）工具",
  "manifest_version": 2,
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "permissions": [
    "notifications",
    "webNavigation",
    "proxy",
    "storage",
    "http://*/*",
    "https://*/*",
    "webRequest",
    "webRequestBlocking"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "images/icon64.png"
  },
  "icons": {
    "48": "images/icon64.png"
  }
}
